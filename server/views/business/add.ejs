<%- include ('../templates/header.ejs'); %>

<%- include ('../templates/main_nav.ejs'); %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6"></div>
        <h1><%= title %> </h1>

        <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Contact name</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter name of the contact"
                name="name" required>
            </div>

            <div class="form-group">
                <label for="auhtorTextField">Contact Number</label>
                <input type="text" class="form-control"
                id="auhtorTextField"
                placeholder="Enter the contact number"
                name="contact" required>

            
            </div>

            <div class="form-group">
                <label for="publishedTextField">Email</label>
                <input type="email" class="form-control"
                id="publishedTextField"
                placeholder="Enter the email"
                name="email" required>
            </div>


            

            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit
            </button>   


            <a href="/business-list" class="btn btn-warning">
                <i class="fas fa-undo"></i> Cancel
            </a>
            
            
           </form>
    </div>
</div>


<%- include ('../templates/bottom_nav.ejs'); %>

<%- include ('../templates/footer.ejs'); %> 